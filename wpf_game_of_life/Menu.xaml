<Window x:Class="wpf_game_of_life.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_game_of_life"
        mc:Ignorable="d"
        Title="Menu" Height="480" Width="640" Background="IndianRed">
    <Grid>
        <Button Content="Rozpocznij grę" HorizontalAlignment="Center" VerticalAlignment="Top" Height="53" Width="132" Margin="0,217,0,0" Click="StartGame"/>
        <Button Content="Wyjdź" HorizontalAlignment="Center" VerticalAlignment="Top" Height="53" Width="132" Margin="0,297,0,0" Click="QuitGame"/>
        <TextBox Name="gridSize" HorizontalAlignment="Center" Margin="0,155,0,0" TextWrapping="Wrap" Text="40" VerticalAlignment="Top" Width="152"/>
        <Label Content="Rozmiar planszy" HorizontalAlignment="Center" Margin="0,124,0,0" VerticalAlignment="Top"/>
        <TextBlock Name="errorText" HorizontalAlignment="Center" Margin="0,404,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="50" Width="344"/>
    </Grid>
</Window>
